<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bottomsheet"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:layout_constraintTop_toBottomOf="@+id/back_calloverlay"
    app:layout_constraintStart_toStartOf="parent"
    android:paddingStart="@dimen/_5sdp"
    android:paddingEnd="@dimen/_5sdp"
    android:paddingBottom="@dimen/_20sdp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="@dimen/_100sdp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_rectangle_1563"
        android:paddingTop="@dimen/_5sdp"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_30sdp"
        >
       <LinearLayout
           android:id="@+id/linearMedicalrecord_requestfragment"
           android:layout_width="@dimen/_130sdp"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:background="@drawable/shape16"
           android:gravity="center"
           android:layout_marginStart="@dimen/_5sdp"
           android:layout_marginEnd="@dimen/_20sdp"
           >

           <ImageView
               android:id="@+id/imageMedicalrecord_requestfragment"
               android:layout_width="@dimen/_35sdp"
               android:layout_height="@dimen/_35sdp"
               android:src="@drawable/ic_fi_rr_treatment"
               android:layout_marginTop="@dimen/_15sdp"
               android:layout_marginBottom="@dimen/_5sdp" />

           <TextView
               android:id="@+id/Medicalrecord_requestfragment"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/c27"
               android:fontFamily="@font/poppins_regular"
               android:text="@string/medical_record"
               android:layout_marginBottom="@dimen/_10sdp"
               android:textSize="@dimen/_10ssp" />
       </LinearLayout>

        <LinearLayout
            android:id="@+id/linearMedicalmeasurement_requestfragment"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape16"
            android:gravity="center"

            >

            <ImageView
                android:id="@+id/imageMedicalmeasurement_requestfragment"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/ic_fi_rr_dashboard"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_5sdp" />

            <TextView
                android:id="@+id/Medicalmeasurement_requestfragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c27"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/medical_measurement"
                android:textSize="@dimen/_10ssp"
                android:layout_marginBottom="@dimen/_10sdp" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/shape10"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        >

        <EditText
            android:id="@+id/SelectAnalysis_requestfragment"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/arrow_CreateCall"
            android:background="@null"
            android:enabled="true"
            android:focusable="false"
            android:fontFamily="@font/poppins_regular"
            android:hint="@string/select_analysis"
            android:inputType="textNoSuggestions"
            android:textAlignment="viewStart"
            android:textSize="@dimen/_14ssp" />
        <ImageView
            android:id="@+id/arrow_CreateCall"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/ic_polygon_12"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            >
        </ImageView>

    </RelativeLayout>

    <EditText
        android:id="@+id/addnote_requestfragment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:fontFamily="@font/poppins_regular"
        android:hint="@string/add_note"
        android:textSize="@dimen/_12ssp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingStart="@dimen/_10sdp"
        android:gravity="top"
        android:background="@drawable/shape18"
        android:textCursorDrawable="@null" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/requestbutton_requestfragment"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="@string/request"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/shape4" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sendbutton_requestfragment"
        android:layout_width="@dimen/_290sdp"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="@string/send"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/shape4" />

</LinearLayout>