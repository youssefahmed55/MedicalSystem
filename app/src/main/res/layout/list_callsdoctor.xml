<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="@dimen/_5sdp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_5sdp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_5sdp"
            >

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/ic_group_2878" />

            <TextView
                android:id="@+id/name_list_callsdoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_9ssp"
                android:fontFamily="@font/poppins_regular"
                android:paddingStart="@dimen/_5sdp"
                android:textColor="@color/c15"
                android:textAlignment="viewStart" />
            
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_5sdp"
            >

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/ic_group_2877" />

            <TextView
                android:id="@+id/date_list_callsdoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_9ssp"
                android:fontFamily="@font/poppins_regular"

                android:paddingStart="@dimen/_5sdp"
                android:textColor="@color/c15"
                android:textAlignment="viewStart" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_gravity="center"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/accept_list_callsdoctor"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_35sdp"
                android:text="@string/accept"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/shape6"
                android:drawableStart="@drawable/ic_group_4464"
                android:paddingStart="@dimen/_8sdp"
                android:paddingEnd="@dimen/_7sdp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/busy_list_callsdoctor"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_35sdp"
                android:text="@string/busy"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins_regular"
                android:background="@drawable/shape13"
                android:drawableStart="@drawable/ic_group_4541"
                android:layout_marginStart="@dimen/_15sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_12sdp" />


        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>