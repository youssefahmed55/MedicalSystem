<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.medicalsystem.viewmodel.MedicalSystemViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"


        >

        <!-- TODO: Update blank fragment layout -->

        <RelativeLayout
            android:id="@+id/profile_Manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="@dimen/_5sdp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardimage_Manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                app:cardElevation="@dimen/_5sdp"
                android:layout_alignParentStart="true">

                <ImageView
                    android:id="@+id/image_Manager"
                    android:layout_width="@dimen/_37sdp"
                    android:layout_height="@dimen/_37sdp"
                    android:scaleType="fitXY" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_toEndOf="@id/cardimage_Manager"
                android:layout_toStartOf="@id/logout_Manager">

                <TextView
                    android:id="@+id/name_Manager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@{viewModel.loginDataMutableLiveData.firstName + ' ' + viewModel.loginDataMutableLiveData.lastName}"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/specialization_Manager"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@{@string/specialist + ' ' + ',' + ' ' + viewModel.loginDataMutableLiveData.specialist}"
                    android:textSize="@dimen/_10ssp"
                    android:textColor="@color/c1" />
            </LinearLayout>

            <ImageView
                android:id="@+id/logout_Manager"
                android:layout_width="@dimen/_21sdp"
                android:layout_height="@dimen/_23sdp"
                android:layout_toStartOf="@id/notificationalarm_Manager"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/ic_baseline_logout_24" />

            <ImageView
                android:id="@+id/notificationalarm_Manager"
                android:layout_width="@dimen/_21sdp"
                android:layout_height="@dimen/_23sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/_5sdp"
                android:src="@drawable/ic_notification" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/cases_Manager"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_150sdp"
            android:orientation="vertical"
            android:background="@drawable/shape5"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/profile_Manager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tasks_Manager"
            app:layout_constraintBottom_toTopOf="@+id/reports_Manager"
            android:layout_marginTop="@dimen/_20sdp"
            android:paddingTop="@dimen/_10sdp"


            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_group_4539"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_11ssp"
                android:text="@string/cases"
                android:layout_marginTop="@dimen/_8sdp"

                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/tasks_Manager"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/shape6"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cases_Manager"
            app:layout_constraintTop_toBottomOf="@+id/profile_Manager"
            app:layout_constraintBottom_toTopOf="@id/attendance_Manager"
            android:paddingTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"

            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_group_346"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/tasks"
                android:textColor="@color/white"
                android:textSize="@dimen/_11ssp"

                />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/reports_Manager"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_120sdp"
            android:background="@drawable/shape7"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/attendance_Manager"
            app:layout_constraintTop_toBottomOf="@id/cases_Manager"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_group_347"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/reports"
                android:textColor="@color/white"
                android:textSize="@dimen/_11ssp"

                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/attendance_Manager"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_150sdp"
            android:orientation="vertical"
            android:background="@drawable/shape8"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/reports_Manager"
            app:layout_constraintTop_toBottomOf="@id/tasks_Manager"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:paddingTop="@dimen/_10sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_group_345"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_11ssp"
                android:text="@string/attendance_leaving"
                android:layout_marginTop="@dimen/_8sdp"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/employee_Manager"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:layout_margin="@dimen/_15sdp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/reports_Manager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/shape15">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins_regular"
                android:textSize="@dimen/_11ssp"
                android:text="@string/employee"
                android:layout_marginTop="@dimen/_8sdp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_group_349"
                android:layout_gravity="center"
                android:layout_weight="1" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>